<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2.5dp"
    android:layout_marginStart="2.5dp"
    android:layout_marginTop="5dp"
    android:layout_weight="1"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Title -"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto next round"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <Switch
                    android:id="@+id/autoNextRoundSW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tutorial Window"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/showTutorialWindowSW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Debug window"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <Switch
                    android:id="@+id/showDebugWindowSW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/optionOneTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option one title"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/optionOneIncrementBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+"
                        android:background="@drawable/menu_btn_shape"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/optionOneCountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="40sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"/>


                    <Button
                        android:id="@+id/optionOneDecrementBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@drawable/menu_btn_shape"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/optionTwoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/optionTwoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Option two title"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/optionTwoIncrementBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+"
                        android:background="@drawable/menu_btn_shape"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/optionTwoCountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="40sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"/>


                    <Button
                        android:id="@+id/optionTwoDecrementBtn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@drawable/menu_btn_shape"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/saveSettingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save settings"
                android:background="@drawable/menu_btn_shape"
                android:layout_margin="5dp"
                android:padding="10dp"/>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>