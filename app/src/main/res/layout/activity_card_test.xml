<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nitramite.pokerpocket.CardTest">

    <!-- Table image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:adjustViewBounds="true"
        android:background="@drawable/poker_table"
        android:contentDescription="table" />

    <!-- Exit button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/playerMoneyCard"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/card_view_elevation_big">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="X"
            android:textColor="@color/textColorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <!-- Continue button (after round | settings specific) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/generateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        app:cardBackgroundColor="@color/playerMoneyCard"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/card_view_elevation_big">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:text="â–¶"
            android:textColor="@color/textColorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <!-- Table view contents -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <!-- ******************************************************* -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <!-- Table middle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!-- middle - section middle -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/middle_layout_height"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card1"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                        <ImageView
                            android:id="@+id/card2"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                        <ImageView
                            android:id="@+id/card3"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                        <ImageView
                            android:id="@+id/card4"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                        <ImageView
                            android:id="@+id/card5"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:id="@+id/seat1Frame"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seat_frame_height">

                    <LinearLayout
                        android:layout_width="@dimen/seat_width"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card6"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />

                        <ImageView
                            android:id="@+id/card7"
                            android:layout_width="@dimen/card_width"
                            android:layout_height="@dimen/card_height"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/card_top_red" />
                    </LinearLayout>

                </FrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/valueTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value: "
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>