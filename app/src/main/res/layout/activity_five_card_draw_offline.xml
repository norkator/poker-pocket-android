                                android:layout_margin="2dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/card_top_red" />

                            <ImageView
                                android:id="@+id/seat6Card1"
                                android:layout_width="@dimen/five_card_draw_card_width"
                                android:layout_height="@dimen/five_card_draw_card_height"
                                android:layout_margin="2dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/card_top_red" />

                            <ImageView
                                android:id="@+id/seat6Card2"
                                android:layout_width="@dimen/five_card_draw_card_width"
                                android:layout_height="@dimen/five_card_draw_card_height"
                                android:layout_margin="2dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/card_top_red" />

